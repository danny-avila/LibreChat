# Automatically install peer dependencies when they are missing
# This helps avoid manual peer dependency installation
auto-install-peers=true

# Allow installation even when peer dependency version mismatches occur
# Useful during migration to prevent blocking on peer dependency conflicts
strict-peer-dependencies=false

# Temporarily enable hoisting to maintain compatibility with packages that expect
# a flat node_modules structure. This will be removed in Phase 8 after we update
# any code that relies on the flat structure.
shamefully-hoist=true