  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug API Server",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/api/server/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    {
      "type": "msedge",
      "request": "launch",
      "name": "Debug Client (edge)",
      "url": "http://localhost:3090",
      "webRoot": "${workspaceFolder}"
    }
  ]
}
